{
  "name": "code-crumb",
  "version": "1.1.0",
  "description": "A terminal tamagotchi that shows what AI coding assistants are doing",
  "main": "renderer.js",
  "bin": {
    "code-crumb": "./launch.js"
  },
  "scripts": {
    "start": "node renderer.js",
    "launch": "node launch.js",
    "launch:codex": "node launch.js --editor codex",
    "launch:opencode": "node launch.js --editor opencode",
    "launch:openclaw": "node launch.js --editor openclaw",
    "demo": "node demo.js",
    "demo:orbital": "node grid-demo.js",
    "setup": "node setup.js",
    "setup:claude": "node setup.js claude",
    "setup:codex": "node setup.js codex",
    "setup:opencode": "node setup.js opencode",
    "setup:openclaw": "node setup.js openclaw",
    "tmux": "node renderer.js --tmux",
    "test": "node test.js"
  },
  "keywords": [
    "codex",
    "opencode",
    "openclaw",
    "terminal",
    "ascii-art",
    "tamagotchi",
    "hooks",
    "plugin",
    "ai-assistant"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Skelly0/code-crumb.git"
  }
}
